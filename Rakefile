# -*- ruby -*-

require 'rubygems'
require 'hoe'

$LOAD_PATH.unshift 'lib'

Hoe.plugins.delete :gemcutter
Hoe.plugin :atti_push

Hoe.spec 'hoe-git_hacks' do
  developer 'Brian Henderson', 'bhenderson@yp.com'

  self.readme_file      = "README.rdoc"

  self.testlib          = :minitest
end

